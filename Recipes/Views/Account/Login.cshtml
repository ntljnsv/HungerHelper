@using Recipes.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main aria-labelledby="title">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card p-4 m-3" style="width: 450px;" id="login">
            <div class="card-body">
                <h2 class="text-center fw-bold">Log in</h2>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-form-label text-center fw-bold" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", style = "width:90%; margin-left:auto; margin-right:auto;" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Password, new { @class = "col-form-label text-center fw-bold" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width:90%; margin-left:auto; margin-right:auto;" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mt-3 text-center">
                        <div class="form-check" style="display: inline-block;">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", style = "margin-left: -1.5rem;" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label", style = "padding-left: 0.5rem;" })
                        </div>
                    </div>

                    <div class="form-group text-center mt-3">
                        <input type="submit" value="Log in" class="btn btn-dark btn-block fw-bold" style="width:90%; margin-left:auto; margin-right:auto;" />
                    </div>

                    <p class="text-center mt-3">
                        @Html.ActionLink("Register as a new user", "Register", "Account", new { @class = "link fw-bold" })
                    </p>
                }
            </div>
        </div>
    </div>
</main>

<style>
    #login {
        background-color: #fee37a;
        border-radius: 25px;
    }
    .link {
        color: #dc3545 !important;
    }

    .link:hover {
        color: #bb1424 !important;
    }


</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}